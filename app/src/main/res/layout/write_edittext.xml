<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
    android:background="@drawable/additional_image_view_stroke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageadd_and_view"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:clickable="true"
            app:srcCompat="@drawable/image_add" />



        <LinearLayout
            android:gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/delete_button"
                android:layout_marginBottom="15dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/close_x_button" />

            <ImageView
                android:id="@+id/rotate_button"

                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/rotate_button" />
            <TextView
                android:id="@+id/img_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image"/>
        </LinearLayout>

    </LinearLayout>


    <EditText
        android:id="@+id/edittextView_for_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="내용을 여기에 입력해주세요"
        android:background="@color/colorWhite"
        android:textSize="15sp"
        android:padding="5dp"/>


</LinearLayout>